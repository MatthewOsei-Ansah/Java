import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        String[] words = {"staff", "metal", "element", "flow", "experiment"};
        Random rand = new Random();
        int upperbound = words.length;
        int randnum = rand.nextInt(upperbound);
        String randword = words[randnum];

        StringBuilder sb = new StringBuilder();

        int num = randword.length();

        int i = 1;
        do
        {
            sb.append('_');
            i += 1;
        }
        while (i <= num);


        System.out.println(sb);
        System.out.println(randword);

        StringBuilder builtstring = sb;
        String hangword = builtstring.toString() ;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter your guess > ");
        String input = sc.nextLine().toLowerCase();
        char[] guessarray = input.toCharArray();
        char guess = guessarray[0];

        char[] gameword = randword.toCharArray();

        for(char c : gameword)
        {
            if (guess == c)
            {
                hangword.replace('_', guess);
            }
            else
            {
                continue;
            }
            }
        System.out.println(hangword);
    }
}
