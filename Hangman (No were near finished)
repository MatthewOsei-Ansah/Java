package com.company;

import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        int j = 0;
        
        String[] words = {"staff", "metal", "element", "flow", "experiment", "chemistry", "physics", "maths", "computer"};
        Random rand = new Random();
        int upperbound = words.length;
        int randnum = rand.nextInt(upperbound);
        String randword = words[randnum];

        StringBuilder sb = new StringBuilder();

        int num = randword.length();

        int i = 1;
        do
        {
            sb.append('_');
            i += 1;
        }
        while (i <= num);


        System.out.println(sb);
        System.out.println(randword);

        String hangword = sb.toString();

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter your guess > ");
        String input = sc.nextLine().toLowerCase();
        char[] guessarray = input.toCharArray();
        char guess = guessarray[0];

        char[] gameword = randword.toCharArray();

        StringBuilder sb2 = new StringBuilder(String.valueOf(gameword));

        for(char c : gameword)
        {
            if (guess == c)
            {
               int index = gameword.indexOf(c, j);
               sb2.setCharAt(index, c);
               hangword = sb2.toString();
               j += 1;
            }
            else
            {
                continue;
            }
        }
        System.out.println(hangword);
    }
}
